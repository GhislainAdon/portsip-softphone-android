<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="@dimen/contact_edit_item_height"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:descendantFocusability="beforeDescendants"
	android:layout_marginBottom="1dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/activity_main_contact_fragment_lvitem_action"
			android:layout_height="@dimen/activity_main_contact_fragment_edit_addphone_size"
			android:layout_width="@dimen/activity_main_contact_fragment_edit_addphone_size"
			android:layout_marginRight="@dimen/contact_edit_actionicon_marginright"
			android:src="@drawable/contact_mid_edit_del_ico"/>
		<TextView
			android:id="@+id/activity_main_contact_fragment_lvitem_type"
			android:layout_width="@dimen/activity_main_contact_fragment_lvitem_type_width"
			android:layout_height="wrap_content"
            android:lines="1"
            android:drawablePadding="2dip"
			android:drawableRight="@drawable/contact_mid_edit_select_more_ico"
            />
		<View
			android:layout_width="1dip"
			android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="@color/portgo_color_lightgray" />
		<com.portgo.view.CursorEndEditTextView
			style="@style/blueCursorEditText"
			android:id="@+id/activity_main_contact_fragment_lvitem_phone"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:background="@null"/>
	</LinearLayout>
	<!--<TextView-->
        <!--android:id="@+id/activity_main_contact_fragment_lvitem_delete"-->
		<!--android:layout_width="@dimen/activity_main_contact_fragment_lvitem_delete_width"-->
		<!--android:layout_height="match_parent"-->
		<!--android:background="@color/portgo_color_red"-->
		<!--android:gravity="center"-->
		<!--android:textColor="@android:color/white"-->
		<!--android:text="@string/message_delete_title"/>-->

</LinearLayout>
