<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/portgo_color_white"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        style="@style/PortActionBarTheme"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tablayout_background"
        app:tabIndicatorColor="@color/portgo_color_blue"
        app:tabSelectedTextColor="@color/portgo_color_blue"
        app:tabTextColor="@color/portgo_color_black"
        />
    <com.portgo.view.SlideMenuListView
        android:id="@+id/screen_tab_history_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@android:color/transparent"
        android:divider="@drawable/divider_line"
        android:scrollbars="vertical"
        android:smoothScrollbar="true" >

    </com.portgo.view.SlideMenuListView>
</LinearLayout>