<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_contact_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/portgo_color_gray"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        style="@style/PortActionBarTheme" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ExpandableListView
            android:id="@+id/contacts_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/portgo_color_white"
            android:childDivider="@drawable/divider_line"
            android:divider="@color/portgo_color_divide_lightgray"
            android:dividerHeight="@dimen/portgo_devide_height"
            android:footerDividersEnabled="false"
            android:groupIndicator="@null"
            android:headerDividersEnabled="false"
            android:listSelector="@android:color/transparent" />

        <com.portgo.view.HintSideBar
            android:id="@+id/quick_searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </FrameLayout>
</LinearLayout>