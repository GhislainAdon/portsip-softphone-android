<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.portgo.view.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:riv_oval="true"
        android:visibility="gone"
        android:id="@+id/user_avatar_image"
        />
    <TextView
        android:visibility="visible"
        android:id="@+id/user_avatar_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/round_blue_button"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/portgo_color_avatar_blue"
        android:textSize="@dimen/contact_detail_namesize"
        android:textStyle="italic"
        android:typeface="monospace"/>
</FrameLayout>