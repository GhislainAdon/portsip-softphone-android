<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/callrule_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/codec_item_height"
    android:paddingLeft="@dimen/fragment_marginLeft"
    android:paddingRight="@dimen/fragment_marginRight"
    android:background="@drawable/list_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/callrule_item_del"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:src="@drawable/activity_login_user_del" />

    <ImageView
        android:id="@+id/callrule_item_mover"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/set_move_ico"/>

    <TextView
        android:id="@+id/callrule_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/callrule_item_mover"
        android:layout_toRightOf="@id/callrule_item_del"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:textColor="@color/portgo_color_light_black"
        android:textSize="@dimen/activity_login_item_user_textsize"
        android:maxLines="1"
         />
</RelativeLayout>