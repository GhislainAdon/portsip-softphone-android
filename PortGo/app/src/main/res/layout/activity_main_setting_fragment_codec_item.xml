
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main_fragment_setting_codec"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
    android:minHeight="@dimen/codec_item_height"
	android:paddingLeft="@dimen/fragment_marginLeft"
	android:paddingRight="@dimen/fragment_marginRight"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/activity_main_fragment_setting_codec_itemname"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
        android:textColor="@color/portgo_color_black"
        android:textSize="16sp"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:text = "audio"/>


	<ToggleButton
		android:id="@+id/activity_main_fragment_setting_codec_itemtoggle"
		style="@style/portgo_toggle_style"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true" />
	<ImageView
		android:id="@+id/activity_main_fragment_setting_codec_itemmover"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:src="@drawable/set_move_ico"
        android:visibility="gone"/>

</RelativeLayout>
