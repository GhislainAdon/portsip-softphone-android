<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="150dp"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/message_sent_file_rl"
    >

    <ImageView
        android:id="@+id/message_sent_file_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_toLeftOf="@id/message_sent_file_icon"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/message_sent_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/portgo_color_black"
            android:textSize="@dimen/textsize_16sp"/>
        <TextView
            android:id="@+id/message_sent_file_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/portgo_color_darkgray"
            android:textSize="12sp"/>
    </LinearLayout>
</RelativeLayout>