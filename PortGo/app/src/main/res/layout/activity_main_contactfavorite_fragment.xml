<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/activity_main_contactfavorite_fragment"
	android:background="@android:color/white">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolBar"
		style="@style/PortActionBarTheme"/>

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/tabLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/toolBar"
        app:tabBackground="@drawable/tablayout_background"
		app:tabIndicatorColor="@color/portgo_color_blue"
		app:tabSelectedTextColor="@color/portgo_color_blue"
		app:tabTextColor="@color/portgo_color_black"/>

    <FrameLayout
        android:id="@+id/contacts_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>