<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <TextView
        android:id="@+id/message_recv_audio_player"
        android:drawableLeft="@drawable/voice_paly"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minHeight="@dimen/chat_item_height"
        android:minWidth="@dimen/chat_content_minwidth"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/chat_voice_textsize"
        android:singleLine="true"
        android:drawablePadding="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="@dimen/chat_text_padding_v"
        android:paddingBottom="@dimen/chat_text_padding_v" />
</FrameLayout>