<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
<TextView
    android:id="@+id/message_sent_audio_player"
    android:drawableRight="@drawable/voice_palyr"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:minHeight="@dimen/chat_item_height"
    android:minWidth="@dimen/chat_content_minwidth"
    android:gravity="right|center_vertical"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/chat_text_padding_v"
    android:paddingBottom="@dimen/chat_text_padding_v"
    android:drawablePadding="1dp"
    android:scaleType="fitCenter"
    android:textSize="@dimen/chat_voice_textsize"
    android:singleLine="true"
    android:layout_marginLeft="@dimen/message_text_margin_failed"/>
</FrameLayout>