<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/min_call_item_height">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_details_listview_call_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/portgo_color_light_black"/>

        <TextView
            android:id="@+id/contact_details_listview_call_inout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/portgo_color_light_black"/>
        <ImageView
            android:id="@+id/contact_details_listview_call_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageView
        android:id="@+id/contact_details_listview_record"
        android:layout_width="wrap_content"
        android:src="@drawable/record_play_ico"
        android:background="@color/portgo_color_black"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/contact_details_listview_call_connecttime"
        android:layout_weight="1"
        android:layout_gravity="right|center_vertical"
        android:textColor="@color/portgo_color_light_black"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

